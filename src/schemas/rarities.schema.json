{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mosberg.github.io/src/schemas/rarities.schema.json",
  "title": "Rarities Schema",
  "description": "Schema for defining item rarities, their attributes, and drop rates.",
  "type": "object",
  "properties": {
    "$id": {
      "type": "string",
      "format": "uri"
    },
    "rarities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "color", "description", "assets", "dropRates"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "name": {
            "type": "string"
          },
          "color": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6})$"
          },
          "description": {
            "type": "string"
          },
          "assets": {
            "type": "object",
            "required": ["icon", "frame"],
            "properties": {
              "icon": {
                "type": "string",
                "pattern": "^rarity:icons/[a-zA-Z0-9_-]+$"
              },
              "frame": {
                "type": "string",
                "pattern": "^rarity:frames/[a-zA-Z0-9_-]+$"
              }
            }
          },
          "dropRates": {
            "type": "object",
            "required": ["crafting", "drop", "loot"],
            "properties": {
              "crafting": {
                "type": "number",
                "minimum": 0
              },
              "drop": {
                "type": "number",
                "minimum": 0
              },
              "loot": {
                "type": "number",
                "minimum": 0
              }
            }
          }
        }
      }
    }
  },
  "required": ["$id", "rarities"]
}
